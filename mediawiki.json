{
  "variables": {
    "ireland_vpc_id": "",
    "ireland_subnet_id": "",
    "london_vpc_id": "",
    "london_subnet_id": "",
    "mediawiki_version": ""
  },
  "builders": [
    {
      "name": "aws-ireland",
      "type": "amazon-ebs",
      "region": "eu-west-1",
      "vpc_id": "{{user `ireland_vpc_id`}}",
      "subnet_id": "{{user `ireland_subnet_id`}}",
      "associate_public_ip_address": true,
      "source_ami_filter": {
        "filters": {
          "virtualization-type": "hvm",
          "name": "ubuntu-*",
          "root-device-type": "ebs"
        },
        "owners": [
          "238573916854"
        ],
        "most_recent": true
      },
      "spot_price": "auto",
      "spot_price_auto_product": "Linux/UNIX (Amazon VPC)",
      "instance_type": "t2.micro",
      "ssh_username": "ubuntu",
      "ami_name": "mediawiki-{{user `mediawiki_version`}}-{{timestamp}}"
    },
    {
      "name": "aws-london",
      "type": "amazon-ebs",
      "region": "eu-west-2",
      "vpc_id": "{{user `london_vpc_id`}}",
      "subnet_id": "{{user `london_subnet_id`}}",
      "associate_public_ip_address": true,
      "source_ami_filter": {
        "filters": {
          "virtualization-type": "hvm",
          "name": "ubuntu-*",
          "root-device-type": "ebs"
        },
        "owners": [
          "238573916854"
        ],
        "most_recent": true
      },
      "spot_price": "auto",
      "spot_price_auto_product": "Linux/UNIX (Amazon VPC)",
      "instance_type": "t2.micro",
      "ssh_username": "ubuntu",
      "ami_name": "mediawiki-{{user `mediawiki_version`}}-{{timestamp}}"
    }
  ],
  "provisioners": [
    {
      "type": "shell",
      "script": "shell/mediawiki.sh",
      "environment_vars": [
        "MEDIAWIKI_VERSION={{user `mediawiki_version`}}"
      ]
    }
  ]
}

